################################################################################
# window management

# enter fullscreen mode
ctrl + shift + alt - f : chunkc tiling::window --toggle fullscreen

# change focus between tiling / floating windows
ctrl + shift + alt - space : chunkc tiling::window --toggle float

# change layout
ctrl + shift + alt - e : chunkc tiling::desktop --layout bsp
ctrl + shift + alt - s : chunkc tiling::desktop --layout monocle

# kill window
shift + alt - q : chunkc tiling::window --close

# move window
ctrl + shift + alt - h : chunkc tiling::window --swap west
ctrl + shift + alt - j : chunkc tiling::window --swap south
ctrl + shift + alt - k : chunkc tiling::window --swap north
ctrl + shift + alt - l : chunkc tiling::window --swap east

# adjust window
shift + alt - l : chunkc tiling::window -r 0.1 -e east
shift + alt - h : chunkc tiling::window -r 0.1 -e west

# equalize windows
ctrl + shift + alt - o : chunkc tiling::desktop --equalize

# move focused container to monitor
ctrl + shift + alt - 0x2B : chunkc tiling::window --send-to-monitor next
ctrl + shift + alt - 0x2F : chunkc tiling::window --send-to-monitor prev


